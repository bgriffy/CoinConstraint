@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView OnLogOutSucceeded=OnLogOutSucceeded Action="@Action">
    <LoggingIn></LoggingIn> 
    <CompletingLoggingIn>
        <LoadSpinnerComponent LoadSpinnerIsHidden=false LoadMessage="Logging in..."/>
    </CompletingLoggingIn>
    <LogInFailed></LogInFailed>
    <LogOut></LogOut>
    <CompletingLogOut>
        <LoadSpinnerComponent LoadSpinnerIsHidden=false LoadMessage="Logging out..."/>
    </CompletingLogOut>
    <LogOutFailed></LogOutFailed>
    <LogOutSucceeded>
    </LogOutSucceeded>
    <UserProfile></UserProfile>
    <Registering>
        <LoadSpinnerComponent LoadSpinnerIsHidden=false LoadMessage="Registering user..."/>
    </Registering>
</RemoteAuthenticatorView>

@code{
    [Parameter] public string? Action { get; set; }

    public void OnLogOutSucceeded()
    {
        NavigationManager.NavigateTo("/");
    }
}
